@model BD.Utilizador_Perfil

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    
<div class="form-horizontal">
    <h4>Utilizador_Perfil</h4>
    @ViewBag.admin
    @ViewBag.username
    @ViewBag.residente
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.user_id)
    @Html.HiddenFor(model => model.perfil_id)

    <div class="form-group">
        @Html.LabelFor(model => model.admin, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @if (@ViewBag.admin)
            {
                @Html.CheckBoxFor(model => model.admin, true)
            }
            else
            {
                @Html.CheckBoxFor(model => model.admin, false)
            }
            @Html.ValidationMessageFor(model => model.admin, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.residente, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @if (@ViewBag.residente)
            {
                @Html.CheckBoxFor(model => model.residente, true)
            }
            else
            {
                @Html.CheckBoxFor(model => model.residente, false)
            }
            @Html.ValidationMessageFor(model => model.residente, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.membro, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @if (@ViewBag.membro)
            {
                @Html.CheckBoxFor(model => model.membro, true)
            }
            else
            {
                @Html.CheckBoxFor(model => model.membro, false)
            }
            @Html.ValidationMessageFor(model => model.membro, "", new { @class = "text-danger" })
        </div>
    </div>


   




    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
