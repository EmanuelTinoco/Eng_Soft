@model IEnumerable<BD.Notifcacao>

@{
    ViewBag.Title = "Index";
}

<h2>Criar Informaçao </h2>
@if (Request.Cookies["user"]["membro"] == "True")
{
    <p>
        @Html.ActionLink("Criar Informação", "Create")
    </p>
}

<h2>Lista de Informações existentes</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.data)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.descricao)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Freguesia.nome)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.data)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.descricao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Freguesia.nome)
            </td>
            <td>
                @if (Request.Cookies["user"]["membro"] == "True")
                {
                    @Html.ActionLink("Delete", "Delete", new { id = item.id })
                }

            </td>
        </tr>
    }

</table>
<p>
    @Html.ActionLink("Voltar", "Index","Home")
</p>